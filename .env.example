# -----------------------------------------------------------------------------
# 基础配置
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WEB_URL=http://localhost:3001
NEXT_PUBLIC_PROJECT_NAME=ShipSaaS

# -----------------------------------------------------------------------------
# Auth配置 (必填)
# https://authjs.dev/getting-started/installation?framework=Next.js
# AUTH_SECRET可以通过运行 `openssl rand -base64 32` 生成
# -----------------------------------------------------------------------------
AUTH_SECRET=

# Google认证 (可选)
# https://authjs.dev/getting-started/providers/google
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED=true
NEXT_PUBLIC_AUTH_GOOGLE_ONE_TAP_ENABLED=false

# Github认证 (可选)
# https://authjs.dev/getting-started/providers/github
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
NEXT_PUBLIC_AUTH_GITHUB_ENABLED=true

# -----------------------------------------------------------------------------
# Stripe支付配置 (必填)
# https://docs.stripe.com/keys
# https://docs.stripe.com/checkout/embedded/quickstart
# 本地监听命令：stripe listen --forward-to localhost:3001/api/stripe/webhook
# -----------------------------------------------------------------------------
STRIPE_PUBLIC_KEY=
STRIPE_PRIVATE_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# 数据库配置 (必填)
# 支持 Neon 或 Supabase
# -----------------------------------------------------------------------------
# Neon数据库
# https://neon.tech/docs/guides/nextjs
DATABASE_URL=


# -----------------------------------------------------------------------------
# 邮件服务配置 (可选，用于密码重置等功能)
# https://resend.com/docs
# -----------------------------------------------------------------------------
RESEND_API_KEY=
NEXT_PUBLIC_FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# AI 功能配置 (可选，用于 ChatGPT 对话和图片生成)
# https://platform.openai.com/api-keys
# -----------------------------------------------------------------------------
# OpenAI API 密钥 - 用于 AI 对话页面 (/ai/chat) 和图片生成 (/ai/image-generation)
OPENAI_API_KEY=

# 可选：OpenAI 组织 ID（如果有多个组织）
OPENAI_ORGANIZATION=

# 可选：自定义 OpenAI API 基础 URL（默认使用官方 API）
OPENAI_BASE_URL=https://api.openai.com/v1

# AI 功能开关（可选，默认启用）
ENABLE_AI_CHAT=true
ENABLE_IMAGE_GENERATION=true

# 默认模型配置（可选）
DEFAULT_CHAT_MODEL=gpt-4o-mini
DEFAULT_IMAGE_MODEL=dall-e-3

# 图片生成配置（可选）
# 默认图片尺寸：1024x1024, 1024x1792, 1792x1024
DEFAULT_IMAGE_SIZE=1024x1024
# 默认图片质量：standard, hd
DEFAULT_IMAGE_QUALITY=standard
# 默认图片风格：realistic, artistic, cartoon, abstract, vintage, minimalist
DEFAULT_IMAGE_STYLE=realistic
# 最大提示词长度（字符）
MAX_PROMPT_LENGTH=1000

# API 限制配置（可选）
MAX_TOKENS_PER_REQUEST=2000
MAX_IMAGES_PER_REQUEST=1
# API 请求超时时间（秒）
API_TIMEOUT_SECONDS=60

# -----------------------------------------------------------------------------
# 其他配置
# -----------------------------------------------------------------------------
# 开发环境调试
DEBUG=false

# 日志级别
LOG_LEVEL=info
